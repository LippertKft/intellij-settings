<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="HTML" injector-id="xml">
      <display-name>input/@disabled</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("disabled")).withParent(xmlTag().withLocalName(string().equalTo("input")).withNamespace(string().equalTo("http://www.w3.org/1999/xhtml")))]]></place>
    </injection>
  </component>
</application>